<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/daily_selfie_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image_layout"
        android:layout_width="@dimen/small_image_width"
        android:layout_height="@dimen/small_image_height"
        android:contentDescription="@string/contentDescImage" />

    <TextView
        android:id="@+id/image_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/image_layout"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:textColor="@android:color/black" />

</RelativeLayout>